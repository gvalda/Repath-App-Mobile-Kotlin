<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Repath.TextView" parent="Widget.AppCompat.TextView">
        <item name="lineHeight">19sp</item>
        <item name="fontFamily">@font/karla</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.Repath.Button" parent="Widget.AppCompat.Button">
        <item name="lineHeight">19sp</item>
        <item name="fontFamily">@font/karla</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Repath.Button.Primary" parent="Widget.Repath.Button">
        <item name="android:background">@drawable/bg_btn_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Repath.Button.Secondary" parent="Widget.Repath.Button">
        <item name="android:background">@drawable/bg_btn_secondary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Repath.Button.Regular" parent="Widget.Repath.Button">
        <item name="android:background">@drawable/bg_btn_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textAppearanceHeadline1">
        <item name="lineHeight">26sp</item>
        <item name="fontFamily">@font/karla_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textAppearanceHeadline2">
        <item name="lineHeight">20sp</item>
        <item name="fontFamily">@font/karla_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>